    <script>
        let spScriptId = 0;
        let checklistItemId = 0;

        function addSpScriptRow() {
            spScriptId++;
            const container = document.getElementById('sp-script-container');
            const newRow = document.createElement('div');
            newRow.className = 'grid grid-cols-1 md:grid-cols-2 gap-4 border p-4 rounded-lg bg-gray-50 relative';
            newRow.id = `sp-row-${spScriptId}`;
            newRow.innerHTML = `
                <div>
                    <label class="form-label text-sm">é†«å¸«å¯èƒ½çš„å•é¡Œ/å‹•ä½œ</label>
                    <textarea class="form-textarea text-sm" rows="2" placeholder="é†«å¸«å•äº†ä»€éº¼..."></textarea>
                </div>
                <div>
                    <label class="form-label text-sm">SPçš„æ¨™æº–å›ç­”/åæ‡‰</label>
                    <textarea class="form-textarea text-sm" rows="2" placeholder="SPå¦‚ä½•å›ç­”..."></textarea>
                </div>
                <button type="button" onclick="removeElement('sp-row-${spScriptId}')" class="absolute top-2 right-2 text-red-500 hover:text-red-700">
                    <i class="fas fa-times-circle"></i>
                </button>
            `;
            container.appendChild(newRow);
        }

        function addChecklistItem() {
            checklistItemId++;
            const container = document.getElementById('checklist-container');
            const newItem = document.createElement('div');
            newItem.className = 'checklist-item relative';
            newItem.id = `checklist-item-${checklistItemId}`;
            newItem.innerHTML = `
                <button type="button" onclick="removeElement('checklist-item-${checklistItemId}')" class="absolute top-4 right-4 text-red-500 hover:text-red-700">
                    <i class="fas fa-trash-alt fa-lg"></i>
                </button>
                <div class="mb-4">
                    <label class="form-label">è©•åˆ†é …ç›®</label>
                    <textarea class="form-textarea" rows="2" placeholder="è«‹è¼¸å…¥è¦è©•æ ¸çš„å…·é«”è¡Œç‚ºæˆ–æŠ€èƒ½ï¼Œä¾‹å¦‚ï¼šæ­£ç¢ºç©¿æˆ´å¤–ç§‘å£ç½©"></textarea>
                </div>
                <div>
                    <label class="form-label">è©•åˆ†æ¨™æº–èˆ‡åŸå› è§£é‡‹</label>
                    <div class="space-y-3">
                         <div class="flex items-start space-x-3">
                            <div class="w-32 flex-shrink-0 font-semibold pt-2 text-gray-700">å®Œå…¨åšåˆ° (2åˆ†)</div>
                            <textarea class="form-textarea text-sm flex-1" rows="2" placeholder="è§£é‡‹é¸æ“‡ã€Œå®Œå…¨åšåˆ°ã€çš„åŸå› ï¼Œå³å¾—åˆ†éœ€é”æˆçš„è¡Œç‚ºæ¨™æº–ã€‚"></textarea>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-32 flex-shrink-0 font-semibold pt-2 text-gray-700">éƒ¨åˆ†åšåˆ° (1åˆ†)</div>
                            <textarea class="form-textarea text-sm flex-1" rows="2" placeholder="è§£é‡‹é¸æ“‡ã€Œéƒ¨åˆ†åšåˆ°ã€çš„åŸå› ï¼Œå³å¾—åˆ†éœ€é”æˆçš„è¡Œç‚ºæ¨™æº–ã€‚"></textarea>
                        </div>
                         <div class="flex items-start space-x-3">
                            <div class="w-32 flex-shrink-0 font-semibold pt-2 text-gray-700">æ²’æœ‰åšåˆ° (0åˆ†)</div>
                            <textarea class="form-textarea text-sm flex-1" rows="2" placeholder="è§£é‡‹é¸æ“‡ã€Œæ²’æœ‰åšåˆ°ã€çš„åŸå› ï¼Œå³å¾—åˆ†éœ€é”æˆçš„è¡Œç‚ºæ¨™æº–ã€‚"></textarea>
                        </div>
                    </div>
                </div>
            `;
            container.appendChild(newItem);
        }

        function removeElement(elementId) {
            const element = document.getElementById(elementId);
            if (element) {
                element.remove();
            }
        }

        // --- MODAL FUNCTIONS (FIXED) ---
        function saveCase() {
            const modal = document.getElementById('success-modal');
            if (!modal) return; // Defensive check
            const modalContent = modal.querySelector('.modal-content');
            if (!modalContent) return; // Defensive check
            
            modal.classList.remove('hidden');
            // Trigger the animation
            setTimeout(() => {
                modal.classList.add('opacity-100'); // FIX: Operate on modal directly
                modalContent.classList.remove('scale-95');
                modalContent.classList.add('scale-100');
            }, 10);
            
            console.log('Form data would be collected and sent to the server now.');
        }

        function closeModal() {
            const modal = document.getElementById('success-modal');
            if (!modal) return; // Defensive check
            const modalContent = modal.querySelector('.modal-content');
            if (!modalContent) return; // Defensive check

            modal.classList.remove('opacity-100'); // FIX: Operate on modal directly
            modalContent.classList.add('scale-95');
            modalContent.classList.remove('scale-100');
            
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300); // Wait for animation to finish
        }

        // --- EVENT LISTENERS ---
        // We wrap event listeners in DOMContentLoaded to ensure elements exist before attaching listeners.
        document.addEventListener('DOMContentLoaded', function() {
            const closeModalBtn = document.getElementById('close-modal-btn');
            if (closeModalBtn) {
                closeModalBtn.addEventListener('click', closeModal);
            }

            const successModal = document.getElementById('success-modal');
            if (successModal) {
                 // Close modal if backdrop is clicked
                successModal.addEventListener('click', function(event) {
                    if (event.target === this) {
                        closeModal();
                    }
                });
            }
            
            // Add initial rows on page load for demonstration
            addSpScriptRow();
            addChecklistItem();
        });
    </script>
